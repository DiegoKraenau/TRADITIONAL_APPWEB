@{
    ViewData["Title"] = "Privacy Policy";
}

<body>

<div class="p-3">
            <img class="img-fluid rounded-circle" src="../assets/Logo.jpg" id="ImagenLogo" >
</div>

<form id = "formulario" asp-controller="Home" asp-action="Inicio" method="post">
		<div class="form-group" >
			<label >Username</label> 
			<input type="text" class="form-control col-lg-3 col-md-3 col-xs-12"  aria-describedby="emailHelp"
				placeholder="Enter Username" name="username"> <small id="emailHelp"
				class="form-text text-muted">We'll never share your data
				with anyone else.</small>
		</div>
		<div class="form-group">
			<label >Password</label> <input
				type="password" class="form-control col-lg-3 col-md-3 col-xs-12"
				 placeholder="Password" name="password">	
		</div>

		<button type="submit" class="btn btn-primary" >Ingresar</button>
		<br>
		<br>
		<a class="btn btn-secondary" asp-controller="Customer" asp-action="Create">Registrarse</a>

		
</form>



</body>
